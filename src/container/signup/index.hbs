{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class='page page--background'>
  <header>
     {{> back-button}}
  </header>

  <form class="page__section">
    <h1 class="page__title">Реєстрація</h1>

    <div class="form">
       <div class="form__item">
        {{> field action='signupForm.change' label="Email adress" type="email" name="email" placeholder="Your email"}}
        <span name="email" class="form__error">Помилка</span>
       </div>
       <div class="form__item">
        {{> field-password action='signupForm.change' label="Password" name="password" placeholder="Your password"}}
        <span name="password" class="form__error">Помилка</span>
       </div>
        <div class="form__item">
        {{> field-password action='signupForm.change' label="Password again"  name="passwordAgain" placeholder="Your password"}}
        <span name="passwordAgain" class="form__error">Помилка</span>
       </div>
        <div class="form__item">
        {{> field-select action='signupForm.change' label="Role"  name="role" placeholder="Selecr role" list=data.role}}
        <span name="role" class="form__error">Помилка</span>
       </div>
       <div class="form__item">
        {{> field-checkox action='signupForm.change' label="You trust the rules of the server"  name="isComfirm"}}
        <span name="isComfirm" class="form__error">Помилка</span>
       </div>
    </div>

    <button onclick="signupForm.submit()" class="button button--disabled" type="button">Зареєструватися</button>

    <span class="alert alert--disabled">Увага, помилка!</span>

  </form>
</div>

